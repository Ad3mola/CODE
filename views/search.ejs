<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/header.ejs") %>

    <section class="container main-content">
      <div class="main-wrapper search-wrapper">
        <div class="form">
          <form id="form">
            <div class="form-group">
              <label for="#searchInput" class="search-label">Search</label>
