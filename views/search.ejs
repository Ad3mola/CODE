            <small class="error error-view">Please enter a search query</small>
          </form>
          <div class="blog-result" id="blogResult"></div>
        </div>
        <%- include("../partials/aboutCard.ejs") %>
      </div>
    </section>
    <footer>
      <div class="container">
        <p>All articles written by Ademola Madelewi</p>
      </div>
    </footer>
    <script async src="/index.js"></script>
    <script src="/search.js"></script>
  </body>
</html>
